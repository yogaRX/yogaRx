@model yogaRx.Models.Rating

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Rating</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.SymbolRating, htmlAttributes: new { @class = "control-label col-md-2" })

            @*Choose Positive or Negative Review*@
         
                <div class="col-md-10">
                    <span class="glyphicon glyphicon-thumbs-up">&nbsp;</span>@Html.RadioButtonFor(x => x.SymbolRating, "1", new { htmlAttributes = new { @class = "form-control" } })
                    <span class="glyphicon glyphicon-thumbs-down">&nbsp;</span>@Html.RadioButtonFor(x => x.SymbolRating, "-1", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        


        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TextReview, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TextReview, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TextReview, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
   
    <div>
       
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
