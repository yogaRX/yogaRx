@model yogaRx.Models.Pose

@{
    ViewBag.Title = "Details";
}

<link href="~/Content/Images.css" rel="stylesheet" />



<div>
    <h2>@Html.DisplayFor(model => model.PoseName)</h2>
    <hr />
    <dl class="dl-horizontal">
    
        <dd>
            @Html.DisplayFor(model => model.PoseName)
        </dd>

        <dd>
            @Html.Raw(Model.PoseDesc)
        </dd>

        @if (Model.Photo != null)
        {
            <dd>
               <div class="row">
                   <div class="col-md-12 col-sm-12 col-xs-12">
                <img class="photosize" src="@Url.Content(Model.Photo)" />
                @if (Model.Photo1 != null)
                {
                    <img class="photosize" src="@Url.Content(Model.Photo1)" />
                }
                </div>
                </div>
            </dd>
        }
        


    </dl>
    @using (Html.BeginForm("Favorite", "Manage", FormMethod.Get))
    {
        @*@Html.AntiForgeryToken()*@
        @Html.Hidden("PoseId", Model.PoseId)
        <input onclick="change()" class="btn btn-secondary"  type="submit"  value="Favorite" id="myButton1"/>
    }

    <script>

function change(){
    document.getElementById("myButton1").value = "Added To Favorites";
   
}
    </script>


</div>

